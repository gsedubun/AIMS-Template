@page
@model LoginModel
@{
    ViewData["Title"] = "Login";

}

<div class="card col-4">
    <div class="card-header">
        <div class="card-title">Login</div>
    </div>
    <form method="post">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="LoginInput.UserName"></label>
                <input asp-for="LoginInput.UserName" class="form-control" />
                <span asp-validation-for="LoginInput.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginInput.Password"></label>
            <input asp-for="LoginInput.Password" class="form-control" type="password"/>
            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    </div>
    </form>
</div>